@page "/change-password"

<PageTitle>Change your Password?</PageTitle>

<div class="auth-fluid">
    <div class="auth-fluid-right p-0">
        <img src="images/bg-auth.jpg" alt="Cover Image" class="w-100 h-100 img-fluid">
    </div>
    <div class="auth-fluid-form-box">
        <div class="card-body d-flex flex-column h-100 gap-3">

            <div class="auth-brand text-center">
                <a href="index.html" class="logo-dark"> Bislerium </a>
                <a href="index.html" class="logo-light"> Bislerium </a>
            </div>

            <div class="my-auto">
                <div class="text-center w-75 m-auto">
                    <h4 class="mt-0">Sign In</h4>
            <p class="text-muted mb-4">Enter your email address and password to access account.</p>
                </div>

                <form action="#" class="login__form custom-form">
                    <div class="row">
                        <div class="mb-3 col-12">
                            <div class="form-floating mb-0 input-group">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                    <i class="ri ri-group-line"></i>
                </div>
                        </div>

                        <div class="mb-3 col-12">
                            <div class="form-floating mb-0 input-group">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                    <i class="uil uil-eye"></i>
                </div>
                        </div>

                        <div class="d-flex align-items-center w-100 justify-content-between mb-4">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input float-start" id="checkbox-signin">
                        <label class="form-check-label" for="checkbox-signin">Remember me</label>
                    </div>
                    <a href="#" class="text-muted float-end"><small>Forgot your password?</small></a>
                </div>

                        <div class="d-grid mb-0 text-center">
                    <button class="btn btn-gradient" type="submit"><i class="mdi mdi-login"></i> Log In
                    </button>
                </div>
                    </div>
                    <div class="text-center mt-4">
                    <p class="text-muted font-16">Sign in with</p>
                    <ul class="social-list list-inline mt-3">
                        <li class="list-inline-item">
                            <a href="javascript: void(0);"
                                class="social-list-item border-primary text-primary"><i
                                    class="mdi mdi-facebook"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i
                                    class="mdi mdi-google"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="javascript: void(0);" class="social-list-item border-info text-info"><i
                                    class="mdi mdi-twitter"></i></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="javascript: void(0);"
                                class="social-list-item border-secondary text-secondary"><i
                                    class="mdi mdi-github"></i></a>
                        </li>
                    </ul>
                </div>
                </form>
            </div>

            <footer class="footer footer-alt">
            <p class="text-muted">Don't have an account? <a href="pages-register-2.html"
                    class="text-muted ms-1"><b>Sign Up</b></a></p>
        </footer>

        </div>
    </div>
</div>

<div class="authentication-bg">
    <section class="change-password">
        <div class="notes d-flex flex-column">
            <small class="text-gray-500">
                <em>Complete this form to change the password.</em>
            </small>
        </div>
        <form id="change-password-form">
            <div class="row align-items-center pb-3">
                <div class="col-xl-2 col-lg-3 col-12">
                    <label class="form-label">
                        old password
                        <span class="text-gray-400">(required)</span>
                    </label>
                </div>
                <div class="col-xl-4 col-lg-4 col-12">
                    <div class="input-group input-group-merge">
                        <input type="password" id="password" class="form-control" placeholder="Enter your password">
                        <div class="input-group-text" data-password="false">
                            <span class="password-eye"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row align-items-center pb-3">
                <div class="col-xl-2 col-lg-3 col-12">
                    <label class="form-label">
                        new password
                        <span class="text-gray-400">(required)</span>
                    </label>
                </div>
                <div class="col-xl-4 col-lg-4 col-12">
                    <div class="input-group input-group-merge">
                        <input type="password" id="password" class="form-control" placeholder="Enter your password">
                        <div class="input-group-text" data-password="false">
                            <span class="password-eye"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row align-items-center pb-3">
                <div class="col-xl-2 col-lg-3 col-12">
                    <label class="form-label"> old password </label>
                </div>
                <div class="col-xl-4 col-lg-4 col-12">
                    <div class="input-group input-group-merge">
                        <input type="password" id="password" class="form-control" placeholder="Enter your password">
                        <div class="input-group-text" data-password="false">
                            <span class="password-eye"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="btn-wrapper">
                <button type="submit" class="btn btn-lg btn-primary text-capitalize">
                    change password
                </button>
            </div>
        </form>
    </section>
</div>
